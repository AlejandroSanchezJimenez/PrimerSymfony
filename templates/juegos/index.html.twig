{% extends 'base.html.twig' %}

{% block title %}
	Juegos de mesa
{% endblock %}

{% block body %}
	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">

					<!-- ***** Most Popular Start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Todos</em>
										los juegos</h4>
								</div>
								<div class="row">
									{% for juego in juegos %}
										<div class="col-lg-3 col-sm-6">
											<div class="item">
												<img src={{juego.Caratula}} alt="">
												<h4>{{juego.Nombre}}<br><span>{{juego.Editorial}}</span>
												</h4>
												<ul>
													<li>{{juego.Minjug}}</li>
													<li>{{juego.Maxjug}}</li>
												</ul>
												<div class="main-button">
													<a href="/reserva">Reservar</a>
												</div>
											</div>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Most Popular End ***** -->
				{% endblock %}
