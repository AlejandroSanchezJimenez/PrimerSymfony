{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block title %}
	Los juegos hermanos
{% endblock %}

{% block body %}

	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">


					<!-- ***** Most Popular Start ***** -->
					<div class="most-popular">
						<center>
                        <div class="col-lg-3 col-sm-6">
							<div class="item">
								{% if error %}
									<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}
									<form action="{{ path('app_login') }}" method="post">
										<label for="username">Email:</label>
										<input type="text" id="username" name="_username" value="{{ last_username }}">
										<br><br>
										<label for="password">Password:</label>
										<input
										type="password" id="password" name="_password">

										{# If you want to control the URL the user is redirected to on success
																									                        <input type="hidden" name="_target_path" value="/account"> #}

										<br><br>
										<button class="main-button-new" type="submit">Iniciar sesión</button>
									</form>
							</div>
						</div>
                        </center>

                        <center>
                        <div class="col-lg-3 col-sm-6">
							<div class="item">
								<h4> ¿Aún no formas parte de la familia? No te preocupes, puedes unirte registrándote <a href="/register"> aquí</a> </h4>
							</div>
						</div>
                        </center>

					</div>
					<!-- ***** Most Popular End ***** -->


				</div>
			</div>
		</div>
	</div>
{% endblock %}
