{% extends 'base.html.twig' %}

{% block title %}
	Los juegos hermanos
{% endblock %}

{% block body %}

	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">

					<!-- ***** Banner Start ***** -->
					<div class="main-banner">
						<div class="row">
							<div class="col-lg-7">
								<div class="header-text">
									<h6>Bienvenido a la familia de los juegos hermanos</h6>
									<h4>
										<em>Juega</em>
										a cualquier juego, en cualquier momento</h4>
									<div class="main-button">
										<a href="/juegos">Ver juegos</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Banner End ***** -->

					<!-- ***** Most Popular Start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Los más populares</em>
										Ahora mismo</h4>
								</div>
								<div class="row">
									{% for juego in juegos %}
										<div class="col-lg-3 col-sm-6">
											<div class="item">
												<img src={{juego.Caratula}} alt="">
												<h4>{{juego.Nombre}}<br><span>{{juego.Editorial}}</span>
												</h4>
												<ul>
													<li>{{juego.Minjug}}</li>
													<li>{{juego.Maxjug}}</li>
												</ul>
												<div class="main-button">
													<a href="/reserva">Reservar</a>
												</div>
											</div>
										</div>
									{% endfor %}
									<div class="col-lg-12">
										<div class="main-button">
											<a href="/juegos">Ver todos los juegos</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Most Popular End ***** -->


					{% if app.user!=null %}
					<!-- ***** Gaming Library Start ***** -->
					<div class="gaming-library">
						<div class="col-lg-12">
							<div class="heading-section">
								<h4>Tus
									<em>reservas</em</h4>
								</div>
								<div class="item">
									{% if reservas!=null %}
										{% for reserva in reservas %}
										<center>
										<ul>
											<li>
												<h4>Juego</h4>
												<span>{{reserva.juego.nombre}}</span>
											</li>
											<li>
												<h4>Número de mesa</h4>
												<span>{{reserva.mesa.id}}</span>
											</li>
											<li>
												<h4>Día de reserva</h4>
												<span>{{reserva.diareserva|date('d-m-y')}}</span>
											</li>
											<li>
												<h4>Horas reservadas</h4>
												<span>{{reserva.horaentrada|date("h-i") ~ '/' ~ reserva.horasalida|date("h-i")}}</span> 
											</li>
											<li>
												<div class="main-border-button border-no-active">
													<a href="#">Cancelar</a>
												</div>
											</li>
										</ul>
										</center>
										{% endfor %}
									{% else %}
										<h4>
											<center>Sin reservas, de momento. ¡Anímate! </center>
										</h4>
									{% endif %}
								</div>
							</div>
							<div class="col-lg-12">
								<div class="main-button">
									{% if reservas==null %}
										<a href="/reserva">Reservar</a>
									{% endif %}
								</div>
							</div>
						</div>
						<!-- ***** Gaming Library End ***** -->
					{% endif %}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
