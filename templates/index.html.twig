{% extends 'base.html.twig' %}

{% block title %}
	Los juegos hermanos
{% endblock %}

{% block body %}

	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">

					<!-- ***** Banner Start ***** -->
					<div class="main-banner">
						<div class="row">
							<div class="col-lg-7">
								<div class="header-text">
									<h6>Bienvenido a la familia de los juegos hermanos</h6>
									<h4>
										<em>Juega</em>
										a cualquier juego, en cualquier momento</h4>
									<div class="main-button">
										<a href="/juegos">Ver juegos</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Banner End ***** -->

					<!-- ***** Most Popular Start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Los m√°s populares</em>
										Ahora mismo</h4>
								</div>
								<div class="row">
									{% for juego in juegos %}
										<div class="col-lg-3 col-sm-6">
											<div class="item">
												<img src="{{ asset('Juego_de_mesa_fotos/' ~ juego.juego.Nombre ~ 'caratula.png') }}" width=200 height=200 alt="">
												<h4>{{juego.juego.Nombre}}<br><span>{{juego.juego.Editorial}}</span>
												</h4>
												<ul>
													<li>{{juego.juego.Minjug}}</li>
													<li>{{juego.juego.Maxjug}}</li>
												</ul>
												<div class="main-button">
													{% if app.user!=null %}
														<a href={{'/reserva?idjuego=' ~ juego.juego.id}}>Reservar</a>
													{% else %}
														<a href="/login">Reservar</a>
													{% endif %}
												</div>
											</div>
										</div>
									{% endfor %}
									<div class="col-lg-12">
										<div class="main-button">
											<a href="/juegos">Ver todos los juegos</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Most Popular End ***** -->


					
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
