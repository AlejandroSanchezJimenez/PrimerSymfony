{% extends 'base.html.twig' %}

{% block title %}
	Juegos de mesa
{% endblock %}

{% block body %}
	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-content">
						<center>
							<div class="main-button">
								<a href='/juegos/añadir'>Añadir juego</a>
							</div>
						</center>
					<!-- ***** Gaming Library Start ***** -->
					<div class="gaming-library profile-library">
						<div class="col-lg-12">
							<div class="heading-section">
								<h4>
									<em>Todos los</em>
									juegos</h4>
							</div>
							{% for juego in juegos %}
							<div class="item">
								<center>
								<ul>
                                    <li>
                                        <img src="{{ asset('Juego_de_mesa_fotos/' ~ juego.Nombre ~ 'caratula.png') }}" alt="" class="templatemo-item">
                                    </li>
									<li>
										<h4>Nombre</h4>
										<span>{{juego.nombre}}</span>
									</li>
									<li>
										<h4>Descripción</h4>
										<span>{{juego.Editorial}}</span>
									</li>
									<li>
										<h4>Anchura</h4>
										<span>{{juego.Anchura}}</span>
									</li>
                                    <li>
										<h4>Longitud</h4>
										<span>{{juego.Longitud}}</span>
									</li>
                                    <li>
										<h4>Jugadores</h4>
										<span>{{juego.Minjug ~ '-' ~ juego.Maxjug}}</span>
									</li>
									<li>
										<center><a href={{'/juegos/edit/' ~ juego.id}}><i class="fa-solid fa-pen-to-square"></i></a></center>
									</li>
									<li>
										<center><a href={{'/juegos/delete/' ~ juego.id}} onclick="return confirm('¿Estás seguro de que deseas eliminar este juego?')"><i class="fa-solid fa-trash"></i></a></center>
									</li>
								</ul>
								</center>
							</div>
							{% endfor %}
							
						</div>
					</div>


				{% endblock %}
