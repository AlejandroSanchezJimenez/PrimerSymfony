{% extends 'base.html.twig' %}

{% block title %}Mi perfil
{% endblock %}

{% block body %}

	<!-- ***** Header Area Start ***** -->
	{% block header%}
		{{parent()}}
	{% endblock %}
	<!-- ***** Header Area End ***** -->

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">

					<!-- ***** Banner Start ***** -->
					<div class="row">
						<div class="col-lg-12">
							<div class="main-profile ">
								<div class="row">
									<div class="col-lg-4">
										<img src="assets/images/logo.png" alt="" style="border-radius: 23px;">
									</div>
									<div class="col-lg-4 align-self-center">
										<div class="main-info header-text">
											<h4>
												{{ app.user.nombre ~ ' ' ~ app.user.ape1 ~ ' ' ~ app.user.ape2 }}
											</h4>
											<div class="main-border-button">
												<a href="/juegos">Reservar</a>
											</div>
										</div>
									</div>
									<div class="col-lg-4 align-self-center">
										<ul>
											<li>Nickname
												<span>{{app.user.nickname}}</span>
											</li>
											<li>Email
												<span>{{app.user.Email}}</span>
											</li>
											<li>Número de telegram
												<span>{{app.user.numtelegram}}</span>
											</li>
										</ul>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-12">
										<div class="clips">
											<div class="row">
												<div class="col-lg-12">
													<div class="heading-section">
														<h4>
															<em>Partidas</em>
															recientes</h4>
													</div>
												</div>
												{% for juegos in jugados %}
													<div class="col-lg-3 col-sm-6">
														<div class="item">
															{% if reservas!=null %}
																<div class="thumb">
																	<img src="{{ asset('Juego_de_mesa_fotos/' ~ juegos.juego.Nombre ~ 'caratula.png') }}" width="200" height="200" alt="" style="border-radius: 23px;">
																</div>
																<div class="down-content">
																	<h4>{{juegos.juego.Nombre}}</h4>
																	<span>
																		{{juegos.diareserva|date('d-m-Y')}}</span>
																</div>
															{% else %}
																<h4>
																	<center>Aún no has jugado ninguna vez, ¡Anímate!
																	</center>
																</h4>
															{% endif %}
														</div>
													</div>
												{% endfor %}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Banner End ***** -->

					<!-- ***** Gaming Library Start ***** -->
					<div class="gaming-library profile-library">
						<div class="col-lg-12">
							<div class="heading-section">
								<h4>
									<em>Eventos</em>
									jugados</h4>
							</div>
							<div class="item">
								<ul>
									<li><img src="assets/images/game-01.jpg" alt="" class="templatemo-item"></li>
									<li>
										<h4>Dota 2</h4>
										<span>Sandbox</span>
									</li>
									<li>
										<h4>Date Added</h4>
										<span>24/08/2036</span>
									</li>
									<li>
										<h4>Hours Played</h4>
										<span>634 H 22 Mins</span>
									</li>
									<li>
										<h4>Currently</h4>
										<span>Downloaded</span>
									</li>
									<li>
										<div class="main-border-button border-no-active">
											<a href="#">Donwloaded</a>
										</div>
									</li>
								</ul>
							</div>
							<div class="item">
								<ul>
									<li><img src="assets/images/game-02.jpg" alt="" class="templatemo-item"></li>
									<li>
										<h4>Fortnite</h4>
										<span>Sandbox</span>
									</li>
									<li>
										<h4>Date Added</h4>
										<span>22/06/2036</span>
									</li>
									<li>
										<h4>Hours Played</h4>
										<span>745 H 22 Mins</span>
									</li>
									<li>
										<h4>Currently</h4>
										<span>Downloaded</span>
									</li>
									<li>
										<div class="main-border-button border-no-active">
											<a href="#">Donwloaded</a>
										</div>
									</li>
								</ul>
							</div>
							<div class="item last-item">
								<ul>
									<li><img src="assets/images/game-03.jpg" alt="" class="templatemo-item"></li>
									<li>
										<h4>CS-GO</h4>
										<span>Sandbox</span>
									</li>
									<li>
										<h4>Date Added</h4>
										<span>21/04/2022</span>
									</li>
									<li>
										<h4>Hours Played</h4>
										<span>632 H 46 Mins</span>
									</li>
									<li>
										<h4>Currently</h4>
										<span>Downloaded</span>
									</li>
									<li>
										<div class="main-border-button border-no-active">
											<a href="#">Donwloaded</a>
										</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
					{% if app.user!=null %}
						<!-- ***** Gaming Library Start ***** -->
						<div class="gaming-library">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>Tus
										<em>reservas</em</h4>
									</div>
									<div class="item">
										{% if reservas!=null %}
											{% for reserva in reservas %}
												<center>
													<ul>
														<li>
															<h4>Juego</h4>
															<span>{{reserva.juego.nombre}}</span>
														</li>
														<li>
															<h4>Número de mesa</h4>
															<span>{{reserva.mesa.id}}</span>
														</li>
														<li>
															<h4>Día de reserva</h4>
															<span>{{reserva.diareserva|date('d-m-y')}}</span>
														</li>
														<li>
															<h4>Horas reservadas</h4>
															<span>{{reserva.horaentrada|date("h-i") ~ '/' ~ reserva.horasalida|date("h-i")}}</span>
														</li>
														<li>
															<div class="main-border-button border-no-active">
																<a href={{'/cancelareserva?id_reserva=' ~ reserva.id}}>Cancelar</a>
															</div>
														</li>
													</ul>
												</center>
											{% endfor %}
										{% else %}
											<h4>
												<center>Sin reservas, de momento. ¡Anímate!
												</center>
											</h4>
										{% endif %}
									</div>
								</div>
								<div class="col-lg-12">
									<div class="main-button">
										{% if reservas==null %}
											<a href="/juegos">Reservar</a>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
						<!-- ***** Gaming Library End ***** -->
					{% endif %}
					<!-- ***** Gaming Library End ***** -->
				</div>
			</div>
		</div>
	</div>
{% endblock %}
